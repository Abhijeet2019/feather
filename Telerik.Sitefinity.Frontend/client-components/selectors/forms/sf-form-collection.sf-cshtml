<div ng-repeat="item in items" ng-click="select(item)" ng-class="{'is-selected' : isSelected(item)}" sf-scroll-if-selected>
  <p>{{item.Title}}</p>
</div>

<div class="text-center">
  <sf-loading ng-show="$parent.isLoading"></sf-loading>
</div>

<style>
  .is-selected { color:blue; font-weight:900 }
</style>